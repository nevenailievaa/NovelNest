@model UserServiceModel

@{
    ViewBag.Title = "Потребител";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTii3hM5abJEj_Zu0wumINDLGvHaT-MZaesc9dj-gXSUg&s" class="img-fluid" alt="User Image" style="max-width: 30%;" />
        </div>
        <div class="text-center mt-2">
            <h4>@Model.FullName</h4>
            <p><strong>Имейл:</strong> @Model.Email</p>
            <p>
                <strong>Publisher:</strong>
                @if (Model.IsPublisher)
                {
                    <span>✔</span>
                }
                else
                {
                    <span>❌</span>
                }
            </p>
            <p>
                <strong>Admin:</strong>
                @if (Model.IsAdmin)
                {
                    <span>✔</span>
                }
                else
                {
                    <span>❌</span>
                }
            </p>
        </div>
    </div>

    <div class="text-center mt-1">
        <a asp-area="Admin" asp-controller="User" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Обратно към Всички</a>
    </div>

    <div class="d-flex justify-content-center mt-1">
        @if (Model.IsPublisher)
        {
            <a asp-area="Admin" asp-controller="User" asp-action="RemovePublisher" asp-route-id="@Model.Id" method="post" class="btn btn-danger mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Премахни Publisher</a>
        }
        else
        {
            <a asp-area="Admin" asp-controller="User" asp-action="AddPublisher" asp-route-id="@Model.Id" method="post" class="btn btn-success mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Добави Publisher</a>
        }
        @if (Model.IsAdmin)
        {
            <a asp-area="Admin" asp-controller="User" asp-action="RemoveAdmin" asp-route-id="@Model.Id" method="post" class="btn btn-danger mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Премахни Admin</a>
        }
        else
        {
            <a asp-area="Admin" asp-controller="User" asp-action="AddAdmin" asp-route-id="@Model.Id" method="post" class="btn btn-success mb-1 me-1 me-md-2 w-100 p-3 fw-bold">Добави Admin</a>
        }
    </div>
</div>