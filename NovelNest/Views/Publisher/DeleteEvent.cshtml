@model EventDeleteViewModel

@{
    ViewBag.Title = "Изтрий Събитие";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <img class="card-img-top" src="@Model.ImageUrl" alt="Event Image" style="max-width: 200px; height: auto;">
                    <h2 class="card-title" style="margin-top: 15px;">@Model.Topic</h2>
                    <p class="text-danger mt-3">Сигурен ли си, че искаш да изтриеш това събитие?</p>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <form asp-action="DeleteEventConfirmed" method="post" class="col-12">
                        <input type="hidden" asp-for="Id" />
                        <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()" class="btn btn-secondary mb-1 w-100 p-3 fw-bold">Обратно</a>
                        <button type="submit" class="btn btn-danger mb-1 w-100 p-3 fw-bold">Изтрий</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 50px;
    }

    .card {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .text-danger {
        color: #dc3545;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>